{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // Enable interoperability with CommonJS modules
    "resolveJsonModule": true, // Enable importing JSON modules
  },
  "include": ["./**/*"], // Specify the files to include in compilation
  "exclude": ["node_modules", "dist"] // Specify the files to exclude from compilation
}
